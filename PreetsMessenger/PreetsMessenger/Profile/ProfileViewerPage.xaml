<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PreetsMessenger.Profile.ProfileViewerPage">
    <ContentPage.Content>
        <StackLayout>
            <Image/>
            <Label Text="Name: William" />
            <Label Text="Contact"
                   FontAttributes="Bold"/>
            <StackLayout Padding="20,0,0,0">
                <Label Text="Mobile: 1234567890" />
                <Label Text="Email: will.bryant.will@gmail.com" />
            </StackLayout>
            <Button Text="Edit"
                    Clicked="OnEditClicked"
                    IsVisible="True"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>